{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": true,
  },
  "include": [
    "index.ts",
    "nodejs/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}